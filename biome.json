{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*", "*.json", "*.js", "*.ts", "*.html"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always"
		},
		"globals": [
			"jest",
			"describe",
			"it",
			"beforeEach",
			"afterEach",
			"beforeAll",
			"afterAll",
			"expect"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off",
				"noExcessiveCognitiveComplexity": "warn"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useImportType": "off",
				"useConst": "error",
				"useTemplate": "warn",
				"noNegationElse": "warn",
				"useNamingConvention": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noEmptyBlockStatements": "warn",
				"noFallthroughSwitchClause": "error",
				"noRedundantUseStrict": "error"
			},
			"correctness": {
				"noUnknownProperty": "off",
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error",
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error",
				"noUnusedImports": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noDelete": "error"
			}
		}
	}
}
