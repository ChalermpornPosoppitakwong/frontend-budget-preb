{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*", "*.json", "*.js", "*.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"correctness": {
				"noUnknownProperty": "off"
			}
		}
	}
}
